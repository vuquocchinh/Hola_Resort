@model Hola_Resort.ViewModel.BookingDetailsViewModel

@{
    ViewBag.Title = "BookingDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .body{
                        font-family: 'Roboto', sans-serif;

        }

        .guest-info-container {
            background-color: #ffffff;
            border: 1px solid #e8f0fe;
            padding: 10px;
            border-radius: 5px;
        }

        .booking-info-container {
            background-color: #f5f5f5;
            border: 1px solid #cccccc;
            padding: 10px;
            border-radius: 5px;
            position: relative;
        }

            .booking-info-container::before {
                content: "";
                position: absolute;
                top: 50%;
                left: -10px;
                transform: translateY(-50%);
                width: 0;
                height: 0;
                border-top: 8px solid transparent;
                border-bottom: 8px solid transparent;
                border-right: 8px solid #ffc107;
            }

            .booking-info-container h2 {
                margin-top: 0;
            }

            .booking-info-container .form-group:last-child {
                margin-bottom: 0;
            }
    </style>
</head>

<h1 style="text-align:center;">Booking Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2><strong>Room Details</strong></h2>
            <hr />
            <div class="form-group">
                <label style="font-size: 20px;">Room Type:</label>
                <h2 style="font-size: 20px; margin-top: 5px; display: inline-block;">@Model.RoomTypeName</h2>
            </div>

            <div class="form-group">
                <label style="font-size: 20px;">Capacity:</label>
               <h2 style="font-size: 20px; margin-top; 5px; display: inline-block;">@Model.Capacity</h2>
            </div>
            <div class="form-group">
                <label style="font-size: 18px;">Price per Day:</label>
                <h2 style="font-size: 20px; margin-top; 5px; display: inline-block;">@Model.PriceDay</h2>
            </div>
            <div class="form-group">
                <label style="font-size: 18px;">Room Number:</label>
                <h2 style="font-size: 20px; margin-top; 5px; display: inline-block;">@Model.RoomNumber</h2>
            </div>
            <div class="form-group">
                <label style="font-size: 18px;">Description:</label>
                <h2 style="font-size: 20px; margin-top; 5px; display: inline-block;">@Model.Description</h2>
            </div>
        </div>

        <div class="col-md-6">
            <h2><strong>Booking Information</strong></h2>
            <hr />
            @using (Html.BeginForm("BookingDetails", "BookingRoom", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label for="NumberOfAdults">Adults:</label>
                            <input type="number" id="NumberOfAdults" name="NumberOfAdults" placeholder="2" min="1" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label for="NumberOfChildrens">Children:</label>
                            <input type="number" id="NumberOfChildrens" name="NumberOfChildrens" placeholder="2" min="0" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="CheckInDate">Check-in Date:</label>
                            <input type="date" id="CheckInDate" name="CheckInDate" class="form-control" required>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="CheckOutDate">Check-out Date:</label>
                            <input type="date" id="CheckOutDate" name="CheckOutDate" class="form-control" required>
                        </div>
                    </div>

                </div>

               
                <hr />
                <h2><strong>Guest Information</strong></h2>
                <div class="guest-info-container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="NationalId">National ID:</label>
                                <input type="text" id="NationalId" name="NationalId" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="PhoneNumber">Phone Number:</label>
                                <input type="text" id="PhoneNumber" name="PhoneNumber" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Name">Name:</label>
                                <input type="text" id="Name" name="Name" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="Email">Email:</label>
                                <input type="email" id="Email" name="Email" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="booking-info-container">
                    <div class="arrow"></div>
                    @Html.HiddenFor(m => m.RoomId)
                    @Html.HiddenFor(m => m.RoomTypeId)
                    @Html.HiddenFor(m => m.TotalPrice)
                    @Html.HiddenFor(m => m.RoomTypeName)
                    @Html.HiddenFor(m => m.Capacity)
                    @Html.HiddenFor(m => m.PriceDay)
                    @Html.HiddenFor(m => m.RoomNumber)
                    @Html.HiddenFor(m => m.Description)
                    <div class="form-group">
                        <input type="submit" value="Confirm" class="btn btn-primary">
                    </div>
                </div>
            }
        </div>
    </div>
</div>
