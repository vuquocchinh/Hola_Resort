@model IEnumerable<Hola_Resort.Models.Booking>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "BookingId", rowsPerPage: 5);
}

<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }
    </style>
</head>
<body>
    <h3>DANH SÁCH PHÒNG ĐÃ ĐẶT</h3>
    
    
    <div id="gridContent">
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
              {

                grid.Column("BookingId","Mã đặt phòng"),
                grid.Column("GuestId","Mã khách hàng"),

                grid.Column("RoomId", "Mã phòng"),
                grid.Column("CheckInDate", "Ngày nhận"),
                grid.Column("CheckOutDate", "Ngày trả"),
               
                grid.Column("NumberOfAdults", "Người lớn"),
                grid.Column("NumberOfChildrens", "Trẻ em"),
                grid.Column("TotalPrice", "Tổng cộng"),
                grid.Column("Chức năng", format: @<text>
    
    <a href="@Url.Action("Detail",
                        new { id = item.GuestId})" class="edit-btn"><abbr title="Xem chi tiết"><img src="/Assets/ad/img/details.png" width="20" height="20" /></abbr></a>
    <a href="@Url.Action("Delete",
                        new { id = item.BookingId})" class="edit-btn">
        <abbr title="Xóa">
            <img src="/Assets/ad/img/delete.png" width="20" height="20" />
        </abbr>
    </a>
                </text>)
}
)
    </div>
</body>
</html>
